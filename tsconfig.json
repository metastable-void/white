{
    "compilerOptions": {
      "target": "ES2021",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2021",
        "WebWorker"
      ],
      "module": "ES2020",
      "sourceMap": true,
      "declaration": false,
      "newLine": "lf",
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": false
    },
    "include": [
      "src/**/*"
    ]
  }